{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "../types",
        "emitDeclarationOnly": true,
        "noEmit": false,
        "rootDir": "../src"
    },
    "include": [
        "../src"
    ],
    "paths": {
        "@/*": ["src/*"],
        "@root/*": ["./*"],
    },
    "exclude": [
        "../**/__tests__/**/*",
        "../src/plugin-reloader-simple/client",
        "../src/manifest-input/browser"
    ]
}
