{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@types/chrome",
        ],
        "importHelpers": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        // 解析非相对模块名的基准目录
        "baseUrl": ".",
        // 指定特殊模块的路径
        "paths": {
            "@/*": ["src/*"],
        },
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ]
}
